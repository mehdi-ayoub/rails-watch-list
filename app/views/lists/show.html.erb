<div class="container mt-3">
  <h1> Your Requested List </h1>
  <%= @list.name %>
  <br>
  <br>
  <%= link_to "Home Page", lists_path, class: "btn btn-primary" %>
  <br>
</div>

<div class="container mt-3">
  <h3> <%= link_to "Add a Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %> </h3>
</div>

<% @list.bookmarks.each do |bookmark| %>
  <div>
    <%= link_to "Delete this", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    <%= bookmark.comment %>
  </div>
<% end %>
